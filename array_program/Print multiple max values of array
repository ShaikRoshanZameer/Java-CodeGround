class Ar{
public static void main(String args[]){
	int[] arr=new int[]{3,2,1,3};
	System.out.println(maxval(arr));
}
static int maxval(int[] arr){
	int count=1;
	int max=arr[0];
	for(int i=1;i<arr.length;i++){
			if(arr[i]>max){
				max=arr[i];
				count=1;
	}
	else if(arr[i]==max){
				count++;
	}
}
	return count;
  }
}
