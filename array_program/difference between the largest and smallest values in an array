import java.util.*;
class Array22{
public static void main(String args[]){
	int[] arr = {2,4,6,8,14,7};
	System.out.println("original array is: "+Arrays.toString(arr));
	int max = arr[0];
	int min = arr[0];
	for(int i=0; i < arr.length; i++){
		if(arr[i] > max){
			max = arr[i];
		}
		else if(arr[i] < min){
			min = arr[i];
		}
	}
	System.out.println("Differene between largest value "+max+" and min value "+min+" is: "+(max-min));
}
}
